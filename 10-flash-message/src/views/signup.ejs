<!-- validasi, apakah variabel message ada dan memiliki panjang lebih dari 0?

- message: Variabel ini diambil dari req.flash("message") dan akan berisi array dengan informasi pesan.
- message.length > 0: Memastikan bahwa array message tidak kosong.
-->
<% if ( message.length > 0) { %>
<script>
  /* jika ada maka tampilkan pesannya yaitu:
         message[0]: menampilkan icon popup itu adalah success atau error, disini saya menggunakan popup "error"
         message[1]: menampilkan judul pesan = "Error !"
         message[2]: menampilkan teks pesan = "Data tidak boleh kosong"
    */
  Swal.fire({
    title: "<%= message[1] %>",
    text: "<%= message[2] %>",
    icon: "<%= message[0] %>",
  });
</script>
<% } %>

<div class="container center">
  <div class="content">
    <h2 class="header">Register User</h2>
    <form action="/signup" method="post">
      <div class="row">
        <div class="col-25">
          <label for="nama">Nama Pengguna</label>
        </div>
        <div class="col-75">
          <input type="text" id="nama" name="nama" />
        </div>
      </div>
      <div class="row">
        <div class="col-25">
          <label for="email">Email</label>
        </div>
        <div class="col-75">
          <input type="email" id="email" name="email" />
        </div>
      </div>
      <div class="row">
        <div class="col-25">
          <label for="password">Password</label>
        </div>
        <div class="col-75">
          <input type="password" id="password" name="password" />
        </div>
      </div>
      <div class="row">
        <div class="col-25"></div>
        <div class="col-75">
          <button type="submit" class="btn primary">Register</button>
        </div>
      </div>
    </form>
    <div class="row">
      <div class="col-25"></div>
      <div class="col-75">
        <a href="/login" class="btn secondary">Login</a>
      </div>
    </div>
  </div>
</div>
