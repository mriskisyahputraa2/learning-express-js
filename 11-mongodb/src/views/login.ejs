<% if ( message.length > 0) { %>
<script>
  /* jika ada maka tampilkan pesannya yaitu:
           message[0]: menampilkan icon popup itu adalah success atau error, disini saya menggunakan popup "error"
           message[1]: menampilkan judul pesan = "Error !"
           message[2]: menampilkan teks pesan = "Data tidak boleh kosong"
      */
  Swal.fire({
    title: "<%= message[1] %>",
    text: "<%= message[2] %>",
    icon: "<%= message[0] %>",
  });
</script>
<% } %>

<div class="container center">
  <div class="content">
    <h2 class="header">Login User</h2>
    <form action="/login" method="post">
      <div class="row">
        <div class="col-25">
          <label for="email">Email</label>
        </div>
        <div class="col-75">
          <input type="email" id="email" name="email" />
        </div>
      </div>
      <div class="row">
        <div class="col-25">
          <label for="password">Password</label>
        </div>
        <div class="col-75">
          <input type="password" id="password" name="password" />
        </div>
      </div>
      <div class="row">
        <div class="col-25"></div>
        <div class="col-75">
          <button type="submit" class="btn primary">Login</button>
        </div>
      </div>
    </form>
    <div class="row">
      <div class="col-25"></div>
      <div class="col-75">
        <a href="/signup" class="btn secondary">Register</a>
      </div>
    </div>
  </div>
</div>
